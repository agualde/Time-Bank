<h1>Hello world!</h1>
<div class="container">
  <div class="row d-flex justify-content-between" data-controller="flip" data-flip-target="image">
    <% @users.each do |user| %>
      <div class="card usercard d-flex col-md-4 col-sm-1" >
        <div style="background-image: url(<%= cl_image_path user.photo.key %>);" >
        </div>
        <p><%= user.first_name %>, <%= (( Date.new(@current_year, @current_day, @current_month) - user.birthday ).to_i) / 365 %></p>
        <span class="d-flex justify-content-between">
          <button type="submit" value="<%= user.id %>"> Quick view</button>
          <form action="/users">
            <button name="user_id" type="submit" value="<%= user.id %>"> Visit profile</button>
          </form>
        </span>
      </div>
    <% end %>
  </div>
</div>
