<div class=container>
  <div class="container">
      <div class="col-md-8 offset-md-2">
        <h1>Edit your Profile</h1>
        <%= simple_form_for @user, :method => :patch  do |f| %>

          <div class="form-inputs">
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :username %>
            <%= f.input :birthday, as: :date %>
            <%= f.input :location %>
            <%= f.input :bio %>
            <%= f.input :availability, as: :boolean, checked_value: true, unchecked_value: false %>
          </div>

          <div class="form-actions d-flex justify-content-between mb-2">
            <%= f.button :submit, class: "btn btn-dark", id: "go-btn", value:"Update profile details"%>
            <button class= "btn btn-outline-secondary">Skip</button>
          </div>
        <% end %>
      </div>
  </div>
</div>
